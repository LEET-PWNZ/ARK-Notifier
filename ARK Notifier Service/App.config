<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="EmailThreadLoopIntervalSeconds" value="10"/>
    <add key="PurgeThreadLoopIntervalSeconds" value="86400"/>
    <add key="MySqlConnectionString" value="Server=your.sql.host;Database=your_mysql_database;Uid=your_mysql_user;Pwd=your_mysql_password" />
    <add key="SMTPHost" value="your.smtp.host"/>
  <add key="SMTPPort" value="25"/>
  <add key="SMTPUser" value="your_smtp_user"/>
    <add key="SMTPFromName" value="ARK Notifier"/>
  <add key="SMTPPassword" value="your_smtp_password"/>
  <!--The below hostname is used in the emails that are generated by the service
  so if your app is hosted on www.myarknotifications.com/ark-notifier/ then you need to put that full hostname and path in the below setting
  so that any emails that contain links, would point users to the right host and path.-->
  <add key="WebAppHostname" value="your_ark-notifier_host"/>
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>